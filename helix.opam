opam-version: "2.0"
synopsis: "HELIX"
description: "Verified SPIRAL compiler"
maintainer: ["Vadim Zaliva <lord@crocodile.org>"]
authors: [
  "Vadim Zaliva"
  "Ilia Zaichuk"
  "Yannick Zakowski" 
  "Calvin Beck"
  "Irene Yoon"
  "Steve Zdancewic"
]

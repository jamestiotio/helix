  "ocamlbuild"
  "camlp5"
  "coq-itree"
  "coq-mathcomp-ssreflect"
  "coq-simple-io"
  "coq-color"
  "coq-math-classes"
  "coq-metacoq-template"
  "coq-switch"
  "ANSITerminal"
  "coq-paco"
  "coq-ceres"
  "coq-libhyps"
  "core"
  "core_kernel"
  "dune" {< "3.0" }
  "qcheck"
  "gappa"
  "coq-gappa"

  "coq" {= "8.13.2"}
  "coq-ext-lib" {= "0.11.5"}
  "coq-flocq" {= "3.4.2"}
  "menhir" {= "20211128"}
